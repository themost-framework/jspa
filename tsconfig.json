{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "target": "ES2015",
        "module": "ESNext",
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "./dist/",
        "lib": [
            "DOM",
            "ES2017"
        ],
        "paths": {
            "@themost/jspa/listener": [
                "./listener/src/index"
            ],
            "@themost/jspa/platform-server": [
                "./platform-server/src/index"
            ],
            "@themost/jspa": [
                "./src/index"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts"
    ]
}